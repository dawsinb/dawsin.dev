{
  "include": ["src/**/*", "__tests__/**/*"],
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "Components": ["components"],
      "Hooks": ["hooks"],
      "Stores": ["stores"],
      "Utils": ["utils"],
      "Loaders": ["loaders"]
    },
    "forceConsistentCasingInFileNames": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "stripInternal": false,
    "noImplicitAny": true,
    "types": ["react/next", "react-dom/next", "node", "@types/jest"]
  },
}